{
  "name": "morphmaster",
  "version": "1.0.0",
  "description": "A special framework for building electron applications with AngularJS and Bootstrap on Windows.",
  "author": "Malcolm Wyatt-Mair",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w",
    "evoke": "node ./scripts/evoke.js",
    "build": "npm run evoke \"remap\" && npx abjure build \"./src\" \"./build\"",
    "gen": "node ./scripts/evoke.js gen",
    "add": "node ./scripts/evoke.js add",
    "remap": "node ./scripts/evoke.js remap",
    "watch": "npx chokidar \"./src\" -c \"npm run build\" -i \"**/.app.json\"",
    "zip": "npx zipadeedoodah -o \"../<cwd>_<timestamp>\" -g \"*/**\" \"*.*\" -d -l 9 -i \"node_modules/**\" \".git/**\" \"build/**\" \"dist/**\" -p",
    "morph": "node ./scripts/morph.js",
    "update-version": "node ./scripts/update_version.js"
  },
  "dependencies": {
    "@mdi/font": "^5.8.55",
    "angular": "^1.8.2",
    "angular-animate": "^1.8.2",
    "angular-route": "^1.8.2",
    "angular-sanitize": "^1.8.2",
    "angular-touch": "^1.8.2",
    "angular-vs-repeat": "^2.0.14",
    "bootstrap": "^5.0.0",
    "brace": "^0.11.1",
    "fs-extra": "^9.1.0",
    "highlight.js": "^10.7.2",
    "jquery": "^3.5.1",
    "lodash": "^4.17.20",
    "markdown-it": "^12.0.6",
    "markdown-it-attrs": "^4.0.0",
    "mousetrap": "^1.6.5",
    "popper.js": "^1.16.1"
  },
  "devDependencies": {
    "abjure": "^0.0.11",
    "chokidar-cli": "^2.1.0",
    "commander": "^7.2.0",
    "electron": "^12.0.5",
    "electron-builder": "^22.9.1",
    "zipadeedoodah": "^1.0.1"
  },
  "keywords": [
    "AngularJS",
    "Bootstrap",
    "electron",
    "node",
    "morphmaster",
    "morph"
  ],
  "license": "ISC",
  "build": {
    "appId": "morphmaster",
    "productName": "Morphmaster",
    "win": {
      "icon": "./resources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false,
      "installerIcon": "./resources/icon.ico",
      "installerSidebar": "./resources/installerSidebar.bmp",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "deleteAppDataOnUninstall": true
    },
    "directories": {
      "buildResources": "./resources"
    }
  }
}
